{
  "name": "digitalocean-tools-vsts",
  "version": "1.0.0",
  "description": "DigitalOcean task for the Azure DevOps system",
  "author": "Marcelo Forment√£o <marceloavf3@hotmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/marceloavf/digitalocean-tools-vsts.git",
    "type": "git"
  },
  "scripts": {
    "lint": "yarn run tslint -t codeFrame -p tsconfig.json -c tslint.json && yarn run prettier \"{Tasks,Tests,Common}/**/*.ts\" --write",
    "clean": "node crlf-to-lf.js && yarn run vsts-build-tools-clean",
    "build": "yarn run lint && yarn run webpack",
    "package": "yarn run clean && yarn run build && yarn run vsts-build-tools-package",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "jest"
  },
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "azure-pipelines-task-lib": "^3.0.6-preview.0",
    "lodash": "^4.17.21",
    "matcher": "^3.0.0",
    "p-queue": "^6.6.2",
    "p-retry": "^4.2.0",
    "pretty-bytes": "^5.4.1",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@mapbox/aws-sdk-jest": "^0.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.11.10",
    "@types/q": "^1.5.4",
    "@types/semver": "^7.3.4",
    "@types/webpack": "^4.41.24",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.8.1",
    "copy-webpack-plugin": "^6.3.0",
    "crlf": "^1.1.1",
    "cross-env": "^7.0.2",
    "fork-ts-checker-webpack-plugin": "^6.0.0",
    "gl-vsts-tasks-build-scripts": "0.7.0-alpha.7",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "mock-fs": "^4.13.0",
    "prettier": "^2.1.2",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "semantic-release": "^17.2.3",
    "tfx-cli": "^0.8.3",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.10",
    "ts-node": "^9.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "lint-staged": {
    "{Tasks,Tests,Common}/**/*.ts": [
      "yarn lint"
    ]
  },
  "engines": {
    "node": "^14.0.0",
    "yarn": ">=1.0.0"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci] ***NO_CI***\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
