{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "sourceMap": false,
    "declaration": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "baseUrl": ".",
    "paths": {
      "@DOSUpload/*": ["Tasks/DigitalOceanSpacesUpload/*"],
      "@DOSDelete/*": ["Tasks/DigitalOceanSpacesDelete/*"],
      "@DOSDownload/*": ["Tasks/DigitalOceanSpacesDownload/*"],
      "@DOSDoctlInstaller/*": ["Tasks/DigitalOceanDoctlInstaller/*"],
      "@Common/*": ["Common/Node/*"]
    }
  },
  "include": [
    "./Tasks/**/*.ts",
    "./Tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".BuildOutput"
  ]
}
